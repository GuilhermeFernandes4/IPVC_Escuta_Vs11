<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IPVC_Escuta_Vs11</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IPVC_Escuta_Vs11.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/Imagens/estg_logo_home.svg" style="height: 30px;">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Menu de navegação -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <!-- Itens de navegação esquerda (mantidos vazios) -->
                    <ul class="navbar-nav flex-grow-1"></ul>

                    <!-- Itens de navegação direita: A Escola, Sobre o Projeto e Login/Register -->
                    <ul class="navbar-nav">
                        <!-- Home -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Página Inicial</a>
                        </li>

                        <!-- A Escola -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdownSchool" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                A Escola
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownSchool">
                                <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Sobre">Sobre</a></li>
                                <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contactos">Contactos</a></li>
                            </ul>
                        </li>

                        <!-- Sobre o Projeto -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdownProject" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Sobre o Projeto
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownProject">
                                <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Sobre_Projeto">Sobre</a></li>
                                <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Dashboard">Dashboard</a></li>
                            </ul>
                        </li>

                        <!-- Login / Register -->
                        <li class="nav-item">
                            <partial name="_LoginPartial" />
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Conteúdo principal -->
    <div class="container mb-10">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Rodapé -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - IPVC_Escuta_Vs11
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
